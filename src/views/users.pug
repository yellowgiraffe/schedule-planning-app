extend layouts/main-layout.pug

block content
  main
    .container
      if allUsers.length > 0
        h1 Users List
        ul
          each user in allUsers
            li
              img(src="https://img.icons8.com/fluency/48/000000/user-male-circle.png", alt="User profile image")
              h2 #{user.firstname} #{user.lastname}
              a(href="") Check user details
              a(href="") Check user's schedule
      else
        h1 No users