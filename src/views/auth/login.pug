extend ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="css/form.css")

block content
  main.main
    section.section.main-section
      h2.section-title Log in
      if typeof errors !== "undefined"
          ul.errors
            each error in errors
              li.error-msg #{error.message}
      form.login.form(action="/login" method="POST")
        label.label(for="email") Enter your email address 
        input#emal.input(type="email" name="email" required)
        label.label(for="password") Password
        input#password.input(type="password" name="password" required)
        input.input(type="submit" value="Login")