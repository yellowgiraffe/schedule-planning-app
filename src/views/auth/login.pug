extend layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="../public/css/form.css")

block content
  main.main
    section.section.main-section
      h2.section-title Log in
      form.users-form.form(action="/users" method="POST")
        label.label(for="email") Enter your email address 
        input(type="email" name="email" required)
        label.label(for="password") Password
        input.input(type="password" name="password" required)
        input.input(type="submit") Login