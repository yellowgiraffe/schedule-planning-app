extend layouts/main-layout.pug

block content
    main
      section.intro
        .container
          h2.block-title Welcome to our schedule website!
          a.show-users-btn(href="/users") Show Users
          a.show-schedules-btn(href="/users") Show Schedules
      section.add-user
        .container
          h2.block-title Add new user
          form.users-form(action="/users" method="POST")
            label(for="user-firstname") First name
            input#user-firstname(type="text" name="user-firstname" required)
            label(for="user-lastname") Last name
            input#user-lastname(type="text" name="user-lastname" required)
            label(for="user-email") Email
            input#user-email(type="email" name="user-email" required)
            label(for="user-password") Password
            input#user-password(type="password" name="user-password" required)
            input(type="submit")
      section.add-schedule
        .container
          h2.block-title Add schedule
          form.schedules-form(action="/schedules" method="POST")
            label(for="user-id") 
            select#user-id(name="user-id") 
              each user, index in allUsers
                option(value=index) #{user.firstname} #{user.lastname}
            input(type="submit")